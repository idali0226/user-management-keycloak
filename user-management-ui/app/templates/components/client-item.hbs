<div class="panel panel-default client-item">
    <div class="panel-heading">
        <h3 class="panel-title">{{item.client_id}} <small><i>[{{item.client_name}}]</i></small></h3>
    </div>
    <div class="panel-body">
    	<div class="row">
    	 	<div class="col-xs-12 col-md-12 col-lg-12"> 
	    	 	<div class="row">
	    	 		<div class="col-xs-3">
	    	 			Descriptions:
	    	 		</div>
	    	 		<div class="col-xs-9">
	    	 			{{item.descriptions}}
	    	 		</div>
	    	 	</div> 

	    	 	<div class="row">
	    	 		<div class="col-xs-12">
	    	 			<hr>
	    	 		</div> 
	    	 	</div> 

	    	 	<div class="row">
	    	 		<div class="col-xs-12">
	    	 			List of roles:
	    	 		</div> 
	    	 	</div> 
	    	 	{{#each item.roles as |role|}}
		    	 	<div class="row">
		    	 		<div class="col-xs-3">
		    	 			Client role name: 
		    	 		</div>
		    	 		<div class="col-xs-9">
		    	 			{{role.role_name}}
		    	 		</div>
		    	 	</div>
	    	 	{{/each}}
    	 	</div>
    	</div> 
    </div>
    <div class="panel-footer text-right">
      {{yield}}
    </div>
</div>
 
