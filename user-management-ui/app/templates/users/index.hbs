    {{#users-filter filter=(action 'filterByUsername') as |users|}}

      <hr >
      <ul class="results">
        {{#each users as |user|}}
          {{#user-account account=user}}
            {{#link-to 'users.view' user class='btn btn-success btn-sm' disabled=user.is_super_admin}}
              {{t 'buttons.labels.view'}}   
            {{/link-to}}
          {{/user-account}}
        {{/each}}
      </ul>
  {{/users-filter}}


