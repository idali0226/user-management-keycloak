<div class="container dwcm-collectionobject-view">
    <div class="page-header">
        <h1>
            {{t 'client.list.header'}}
        </h1>
    </div>
    <div class='panel panel-default'>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12 col-md-12 col-lg-12">
                   <table class="table table-striped table-hover">
                        <thead>
                            <tr> 
                                <th>{{t 'fields.labels.client.name'}}</th>   
                            </tr>
                        </thead>
                        <tbody>
                            {{#each model as |client|}} 
                            	 {{#link-to 'clients.view' client tagName='tr' class='clickable'}} 
                                    <td>
                                        {{client.client_name}} 
                                    </td>   
                                {{/link-to}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
