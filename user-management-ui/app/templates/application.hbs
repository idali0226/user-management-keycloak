<nav class="navbar navbar-default">
    <div class="container logo">
        {{#link-to 'index' class='dwum-application-logo'}}{{/link-to}}
        {{#link-to "index" class="dwum-appliciation-brand"}}{{t "main.application_name"}}{{/link-to}}
 
        {{dwum-language-selector class="pull-right"}}
        <div class="pull-right user-menu">
            {{#if session.isAuthenticated}}
                <span class="capitalized">{{session.user_profile.name}} [{{session.user_profile.realm_role}}]</span>  
                (<a class="clickable" {{action 'signout' session.user_profile.user_id}}>{{t 'definitions.sign-out'}}</a>) 
            {{else}}
                {{#link-to 'login'}}
                    {{t 'definitions.sign-in'}}
                {{/link-to}}
            {{/if}}
        </div>
    </div>
 
    <div class="container dwum-secondary-navigation"> 
        <ul class="nav navbar-nav"> 
            {{#link-to "index" tagName="li"}}
                <a>{{t "navigation.start"}}</a>
            {{/link-to}}  
            {{#if session.user_profile.isLoggedIn}} 
                {{#if session.user_profile.isAdmin}} 
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            {{t "navigation.users"}} <span class="caret"></span>
                        </a>
                        
                        <ul class="dropdown-menu">
                            {{#link-to "admin.users" tagName="li" }}
                                <a href="#">{{t "navigation.users.list"}}</a>
                            {{/link-to}}  
                            {{#link-to "admin.users.new" tagName="li"}}
                                <a href="#">{{t "navigation.users.add"}}</a>
                            {{/link-to}} 
                        </ul> 
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            {{t "navigation.clients"}} <span class="caret"></span>
                        </a>
                        
                        <ul class="dropdown-menu">
                            {{#link-to "clients" tagName="li"}}
                                <a href="#">{{t "navigation.clients.list"}}</a>
                            {{/link-to}}  
                            {{#link-to "clients.new" tagName="li"}}
                                <a href="#">{{t "navigation.clients.add"}}</a>
                            {{/link-to}} 
                        </ul> 
                    </li>
                {{else}}
                    {{#link-to "users.profile" session.user_profile.user_id tagName="li" }}
                        <a>{{t "navigation.profile"}}</a>
                    {{/link-to}} 
                {{/if}}  
            {{else}}
                {{#link-to "register" tagName="li"  }}
                    <a>{{t "navigation.register"}}</a>  
                {{/link-to}}   
            {{/if}} 
        </ul>  
    </div>
    
</nav>
{{outlet}}